<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardElevation="10dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/driverImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/van_driver" />

            <TextView
                android:id="@+id/textDriverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Name"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toRightOf="@+id/driverImage"
                android:layout_toEndOf="@+id/driverImage" />

            <TextView
                android:id="@+id/textDriverCollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@+id/textDriverName"
                android:layout_toRightOf="@+id/driverImage"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="College Belongs" />

            <TextView
                android:id="@+id/textDriverNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@+id/textDriverCollege"
                android:layout_toRightOf="@+id/driverImage"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Number" />

            <View
                android:id="@+id/viewLine"
                android:background="#2c93cf"
                android:layout_margin="10dp"
                android:layout_below="@+id/textDriverNumber"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/textBusAssignedtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Bus Assigned"
                android:layout_below="@+id/viewLine"
                android:layout_alignLeft="@+id/viewLine"
                android:layout_alignStart="@+id/viewLine"
                android:layout_toLeftOf="@+id/textDriverNumber"
                android:layout_toStartOf="@+id/textDriverNumber" />

            <TextView
                android:id="@+id/textBusAssigned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Bus Assigned Number"
                android:layout_alignBaseline="@+id/textBusAssignedtxt"
                android:layout_alignBottom="@+id/textBusAssignedtxt"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/textBusAssignedtxt"
                android:layout_toEndOf="@+id/textBusAssignedtxt" />

            <TextView
                android:id="@+id/imageView2"
                android:layout_width="105dp"
                android:layout_height="10dp"
                android:gravity="center"
                android:text="@string/Edit"
                android:layout_margin="2dp"
                android:background="@color/switch_off"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/textBusAssigned"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>



