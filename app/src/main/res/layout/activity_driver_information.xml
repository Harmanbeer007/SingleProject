<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.firebaseadmin.DriverInformation">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/driverImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/van_driver" />


            <TextView
                android:id="@+id/txtProfileDriverNameId"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/driverImage"
                android:background="@null"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Id"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/txtProfileDriverId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtProfileDriverNameId"
                android:layout_toRightOf="@+id/txtProfileDriverNameId"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Id"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtProfileDriverNametxt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProfileDriverId"
                android:layout_toRightOf="@+id/driverImage"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Driver"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/txtProfileDriverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProfileDriverId"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Driver"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/txtProfileDriverNametxt"
                android:layout_toEndOf="@+id/txtProfileDriverNametxt" />

            <TextView
                android:id="@+id/txtProfileDriverNumbertxt"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProfileDriverName"
                android:layout_toEndOf="@+id/driverImage"
                android:layout_toRightOf="@+id/driverImage"
                android:background="@null"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Number"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/txtProfileDriverNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProfileDriverName"
                android:layout_toEndOf="@+id/txtProfileDriverNumbertxt"
                android:layout_toRightOf="@+id/txtProfileDriverNumbertxt"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Number"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtProfileBusAssignedtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Bus Assigned"
                android:textColor="@color/white"
                android:layout_below="@+id/viewLine"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp" />

            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#2c93cf"
                android:layout_below="@+id/txtProfileDriverNumber"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/txtProfileBusAssigned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtProfileBusAssignedtxt"
                android:layout_alignBottom="@+id/txtProfileBusAssignedtxt"
                android:layout_alignParentEnd="true"
                android:focusableInTouchMode="false"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/driverImage"
                android:layout_toRightOf="@+id/driverImage"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Bus Assigned Number"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProfileBusRoutetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Bus Route"
                android:textColor="@color/white"
                android:layout_below="@+id/txtProfileBusAssignedtxt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/driverImage"
                android:layout_alignEnd="@+id/driverImage" />

            <EditText
                android:id="@+id/txtProfileBusRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtProfileBusRoutetxt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtProfileBusAssignedtxt"
                android:layout_toEndOf="@+id/txtProfileBusRoutetxt"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Bus Route"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/txtProfileBusAssigned"
                android:layout_alignStart="@+id/txtProfileBusAssigned"
                android:layout_toRightOf="@+id/txtProfileBusRoutetxt" />


            <Button
                android:id="@+id/btnProfileSave"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtProfileBusRoute"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="77dp"
                android:background="@color/switch_off"
                android:gravity="center"
                android:text="SAVE"
                android:textColor="@color/white" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
