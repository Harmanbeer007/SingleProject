<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:background="@color/cyan_400"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="sandhu.harman.singleproject.MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/school_bg"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewTeacher"
            android:layout_width="83dp"
            android:layout_height="0dp"
            android:layout_marginEnd="42dp"
            android:layout_marginStart="39dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintRight_toLeftOf="@+id/cardViewParent"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewParent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardViewParent"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="42dp">

            <ImageView
                android:id="@+id/imageTeacher"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_proged_avatar_teacher_64dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Teacher" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLay"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardViewParent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="101dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.261">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/inputUserContainer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/login_input_user_vertical_margin"
                    android:background="@drawable/xml_bg_r10_grey800"
                    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_proged_user_blue_18dp" />

                    <View
                        android:layout_width="5dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/login_input_bar_horizontal_margin"
                        android:layout_marginStart="@dimen/login_input_bar_horizontal_margin"
                        android:background="@color/theme_bg" />

                    <EditText
                        android:id="@+id/inputUser"
                        android:layout_width="wrap_content"
                        android:hint="User ID"
                        android:layout_height="40dp"
                        android:layout_weight="1.0"
                        android:enabled="true"
                        android:background="@color/grey_50"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
                        android:maxLines="1"
                        android:textColor="@color/grey_700"
                        android:textColorHint="@color/grey_600"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/inputPasswordContainer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/login_input_pass_vertical_margin"
                    android:background="@drawable/xml_bg_r10_grey800"
                    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/ic_proged_password_blue_18dp" />

                    <View
                        android:layout_width="5dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/login_input_bar_horizontal_margin"
                        android:layout_marginStart="@dimen/login_input_bar_horizontal_margin"
                        android:background="@color/theme_bg" />

                    <EditText
                        android:id="@+id/inputPassword"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.0"
                        android:background="@color/gray_50"
                        android:enabled="true"
                        android:layout_marginLeft="10dp"
                        android:hint="Password"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:paddingRight="5dp"
                        android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
                        android:maxLines="1"
                        android:textColor="@color/grey_700"
                        android:textColorHint="@color/grey_600"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewDriver"
            android:layout_width="83dp"
            android:layout_height="0dp"
            android:layout_marginEnd="34dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewParent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardViewParent"
            android:layout_marginRight="34dp">

            <ImageView
                android:id="@+id/imageDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_proged_avatar_student_64dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Driver" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewParent"
            android:layout_width="83dp"
            android:layout_height="114dp"
            android:layout_marginTop="64dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <ImageView
                android:id="@+id/imageParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_proged_avatar_parent_64dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:text="Parent"

                android:textColor="@color/white" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="13dp"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/cardViewParent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <FrameLayout
            android:id="@+id/nextButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/theme_bg_lighter"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/elevation_button">

                <TextView
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xml_bg_r10_grey800"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/login"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_50"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>
        </FrameLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>