<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_500"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

            <include layout="@layout/head" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="10dp"
            app:cardElevation="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_sub_menu"
            android:background="@color/grey_500">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/grey_300">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <LinearLayout
                        android:id="@+id/payfeeLay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1.0"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/btnPayFee"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:layout_weight="0.99"
                            android:padding="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/fees"
                            android:text="@string/addBus"
                            android:textColor="@color/colorPrimaryDarketc" />


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="Pay Fee"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="3dp"
                            android:background="@color/grey_500" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <LinearLayout
                            android:id="@+id/studyOnline"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:weightSum="1">


                            <ImageView
                                android:id="@+id/btnStudy"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1.0"
                                android:padding="20dp"
                                android:src="@drawable/study"
                                android:textColor="@color/colorPrimaryDarketc" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="2dp"
                                    android:text="Study Online"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />
                            </FrameLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@color/grey_500" />

                        <LinearLayout
                            android:id="@+id/track"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/btnTrackBus"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1.0"
                                android:padding="20dp"
                                android:src="@drawable/track_1"
                                android:text="@string/track"
                                android:textColor="@color/colorPrimaryDarketc" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="2dp"
                                    android:text="Track Bus"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />
                            </FrameLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="3dp"
                        android:background="@color/grey_500" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <LinearLayout
                            android:id="@+id/web"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_weight=".5"
                            android:orientation="vertical"
                            android:padding="6dp"
                            android:weightSum="1">


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom">

                                <ImageView
                                    android:id="@+id/btnWeb"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="10dp"

                                    android:background="@color/white"
                                    android:padding="20dp"
                                    android:src="@drawable/websi"
                                    android:textColor="@color/grey_800" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginTop="2dp"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:text="View College Website "
                                    android:textColor="@color/black" />
                            </FrameLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@color/grey_500" />

                        <LinearLayout
                            android:id="@+id/schoolShop"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight=".5"
                            android:orientation="vertical"
                            android:weightSum="1">


                            <ImageView
                                android:id="@+id/btnBuySchoolMaterial"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"

                                android:layout_marginRight="1dp"
                                android:layout_weight="1.0"
                                android:padding="20dp"
                                android:src="@drawable/bags"
                                android:textColor="@color/colorPrimaryDarketc" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="2dp"
                                    android:text="Shop Bags &amp; Material"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />
                            </FrameLayout>

                        </LinearLayout>
                        <!--<android.support.v7.widget.AppCompatButton-->
                        <!--android:id="@+id/btnAlerts"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="1.0"-->
                        <!--android:background="@drawable/btn_background"-->
                        <!--android:padding="20dp"-->
                        <!--android:text="RoutesAlerts"-->
                        <!--android:textColor="@color/colorPrimaryDarketc" />-->
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

